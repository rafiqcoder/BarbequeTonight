{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // "baseUrl": "src", // This must be specified if "paths" is.
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/Layout/*": ["Layout/*"],
      "@/src/*": ["src/*"],
      "@/styles/*": ["styles/*"],
      "@/public/*": ["public/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/store/store.js",
    "src/store/actions/getData.js",
    "pages/bbq/index.js",
    "pages/bbq/[id].js",
    "src/store/cartSlice.js",
    "src/store/authSlice.js",
    "pages/dashboard/addBBQProduct/index.jsx",
    "components/Home/Home.jsx"
, "components/Home/HomeBBQitems/HomeBBQitems.jsx", "components/ProductCard/ProductCard.jsx", "src/store/cartSlice2.js", "src/store/getitem.js"  ],
  "exclude": ["node_modules"]
}
